{
  "compilerOptions": {
    "target": "ESnext",
    "module": "CommonJS",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules"]
}
